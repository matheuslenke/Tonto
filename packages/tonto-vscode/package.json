{
    "name": "tonto",
    "displayName": "Tonto",
    "publisher": "Lenke",
    "description": "Tonto is a DSL for creating OntoUML models",
    "version": "0.2.10",
    "license": "MIT",
    "icon": "data/images/TontoIcon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/matheuslenke/Tonto",
        "directory": "packages/tonto-vscode"
    },
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tonto",
                "aliases": [
                    "Tonto",
                    "tonto"
                ],
                "extensions": [
                    ".tonto"
                ],
                "configuration": "./data/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tonto",
                "scopeName": "source.tonto",
                "path": "./data/tonto.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "tonto.openSettings",
                "title": "Open extension settings",
                "category": "Tonto"
            },
            {
                "command": "tonto.generateTonto",
                "title": "Generate Tonto project from JSON",
                "category": "Tonto"
            },
            {
                "command": "tonto.generateJSON",
                "title": "Generate JSON from Tonto project",
                "category": "Tonto"
            },
            {
                "command": "tonto.generateDiagram",
                "title": "Generate Diagram from Tonto file",
                "category": "Tonto"
            },
            {
                "command": "tonto.validateModel",
                "title": "Validate Tonto Model",
                "category": "Tonto"
            },
            {
                "command": "tonto.transformModel",
                "title": "Transform Tonto Model to Gufo OWL",
                "category": "Tonto"
            },
            {
                "command": "tonto.tpm.install",
                "title": "Install Tonto Dependencies based on tonto.json manifest file",
                "category": "TPM"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Tonto",
            "properties": {
                "Diagram.Entity.Attributes": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the attributes of the entities."
                },
                "Diagram.Relation.Cardinality": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the Cardinalities of the relationships."
                },
                "Diagram.Relation.Associations": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the Stereotypes of the relationships."
                },
                "Diagram.Relation.AssociationsEndNames": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the Nicknames of the relationships."
                },
                "Diagram.Datatype": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show Datatypes."
                },
                "Diagram.Enumeration": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show Enumerations."
                }
            }
        },
        "jsonValidation": [
            {
                "fileMatch": "tonto.json",
                "url": "./data/tonto-manifest-schema.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:tonto",
        "workspaceContains:tonto.json"
    ],
    "files": [
        "bin",
        "out",
        "lib",
        "src",
        "node.js",
        "node.d.ts"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "copy:schema": "shx cp ../tonto/tonto-manifest-schema.json ./data",
        "prepare": "npm run copy:schema",
        "vscode:prepublish": "npm run clean && tsc --noEmit && npm run lint && node esbuild.js --minify",
        "package": "vsce package --no-dependencies",
        "publish": "vsce publish",
        "clean": "rimraf out",
        "lint": "eslint src --ext ts",
        "lint:fix": "eslint src --ext ts --fix",
        "build": "node esbuild.js && tsc",
        "watch": "node esbuild.js --watch",
        "coverage": "vitest run --coverage",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "publish:npm": "npm publish --access public"
    },
    "dependencies": {
        "chalk": "^4.1.0",
        "cheerio": "^1.0.0-rc.12",
        "commander": "^10.0.1",
        "jspdf": "^2.5.1",
        "langium": "^1.2.0",
        "node-fetch-native": "^1.0.1",
        "puppeteer": "^21.3.1",
        "rimraf": "^4.1.2",
        "tonto-cli": "~0.2.7",
        "tonto-package-manager": "~0.2.9",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2",
        "vscode-languageserver-types": "^3.17.3",
        "vscode-uri": "^3.0.7"
    },
    "devDependencies": {
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.17",
        "@types/node-fetch": "^2.6.1",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "@vitest/coverage-c8": "^0.23.2",
        "@vitest/ui": "^0.23.4",
        "esbuild": "^0.16.9",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.8.0",
        "langium-cli": "^1.2.0",
        "prettier": "^2.8.2",
        "shx": "^0.3.4",
        "typescript": "~4.9.5",
        "vite": "^4.0.2",
        "vitest": "^0.23.2"
    },
    "volta": {
        "node": "18.14.0",
        "npm": "9.3.1"
    }
}
