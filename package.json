{
    "name": "tonto",
    "displayName": "tonto",
    "publisher": "Lenke",
    "description": "Tonto is a DSL for creating OntoUML models",
    "version": "0.1.3",
    "license": "MIT",
    "icon": "docs/images/TontoIcon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/matheuslenke/Tonto"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "tonto",
                "aliases": [
                    "Tonto",
                    "tonto"
                ],
                "extensions": [
                    ".tonto"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tonto",
                "scopeName": "source.tonto",
                "path": "./syntaxes/tonto.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.generateTonto",
                "title": "Generate Tonto"
            },
            {
                "command": "extension.generateJSON",
                "title": "Generate JSON"
            },
            {
                "command": "extension.validateModel",
                "title": "Validate Model"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:tonto"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "tonto-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run clean && tsc --noEmit && npm run lint && node esbuild.js --minify",
        "package": "vsce package --pre-release --baseContentUrl https://github.com/matheuslenke/Tonto",
        "publish": "vsce publish --baseContentUrl https://github.com/matheuslenke/Tonto",
        "clean": "rimraf out",
        "lint": "eslint src --ext ts",
        "lint:fix": "eslint src --ext ts --fix",
        "build": "node esbuild.js && tsc --noEmit",
        "watch": "node esbuild.js --watch",
        "test": "vitest",
        "test-ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "ajv": "^8.11.0",
        "chalk": "^5.2.0",
        "chevrotain": "^10.4.2",
        "colors": "^1.4.0",
        "commander": "^9.4.1",
        "jsonfile": "^6.1.0",
        "langium": "~1.1.0",
        "node-fetch-native": "^1.0.1",
        "ontouml-js": "https://github.com/matheuslenke/ontouml-js#feature/include-types-in-build",
        "ontouml-schema": "0.2.4",
        "rimraf": "^4.1.2",
        "vscode-languageclient": "~8.0.2",
        "vscode-languageserver": "~8.0.2",
        "vscode-languageserver-types": "^3.17.3",
        "vscode-uri": "^3.0.2"
    },
    "devDependencies": {
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.17",
        "@types/node-fetch": "^2.6.1",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "@vitest/coverage-c8": "^0.23.2",
        "@vitest/ui": "^0.23.4",
        "esbuild": "^0.16.9",
        "eslint": "^8.32.0",
        "langium-cli": "^1.1.0",
        "prettier": "^2.8.2",
        "typescript": "~4.9.5",
        "vite": "^4.0.2",
        "vitest": "^0.23.2"
    },
    "volta": {
        "node": "18.14.0",
        "npm": "9.3.1"
    }
}
