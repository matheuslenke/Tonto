{
    "name": "tonto-workspaces",
    "private": true,
    "engineStrict": true,
    "description": "Tonto is a DSL for creating OntoUML models",
    "version": "0.2.10",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/matheuslenke/Tonto"
    },
    "engines": {
        "npm": ">= 7.7.0"
    },
    "scripts": {
        "clean": "rimraf lib node_modules",
        "build": "tsc -b tsconfig.build.json && npm run build --workspaces",
        "lint": "npm run lint --workspaces",
        "lint:fix": "npm run lint --workspaces --fix",
        "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.build.json -w\" \"npm run watch --workspace=langium-vscode\"",
        "test": "vitest",
        "test-ui": "vitest --ui",
        "coverage": "vitest run --coverage",
        "langium:generate": "langium generate --workspace=tonto-cli",
        "langium:watch": "langium generate --watch --workspace=tonto-cli"
    },
    "devDependencies": {
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.17",
        "@types/node-fetch": "^2.6.1",
        "@types/vscode": "^1.63.0",
        "@typescript-eslint/eslint-plugin": "^5.51.0",
        "@typescript-eslint/parser": "^5.51.0",
        "@vitest/coverage-c8": "^0.23.2",
        "@vitest/ui": "^0.23.4",
        "esbuild": "^0.16.9",
        "eslint": "^8.32.0",
        "eslint-config-prettier": "^8.8.0",
        "prettier": "2.8.8",
        "prettier-eslint": "^15.0.1",
        "prettier-plugin-eslint": "^1.0.2",
        "shx": "^0.3.4",
        "typescript": "~4.9.5",
        "vite": "^4.3.8",
        "vitest": "^0.31.1"
    },
    "volta": {
        "node": "18.14.0",
        "npm": "9.3.1"
    },
    "workspaces": [
        "packages/tonto",
        "packages/tonto-vscode",
        "packages/tonto-package-manager"
    ]
}
